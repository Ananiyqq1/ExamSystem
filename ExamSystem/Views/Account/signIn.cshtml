<body>

    <form class="form" asp-action="Login" method="post">
        <div class="logo-container">
            <img src="/images/slack-icon.png" alt="Logo" class="logo">
        </div>
        <p class="form-title">Sign in to your account</p>
        <div class="input-container">
            <input asp-for="Email" type="email" id="email" name="email" placeholder="Enter email"><br>
            <span>
            </span>
        </div>
        <div class="input-container">
            <input asp-for="Password" type="password" name="password" id="password" placeholder="Enter password"><br>
        </div>
        <button type="submit" class="submit">
            Sign in
        </button>
        <div class="g-signin2" data-onsuccess="onSignIn"></div>
        <p class="signup-link">
            No account?
            <a asp-controller="Account" asp-action="Create">Sign up</a>
        </p>
    </form>

</body>
