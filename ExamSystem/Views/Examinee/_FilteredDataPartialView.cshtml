@model List<Exam>

@foreach (var exam in Model)
{
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-4">
                <img src='@exam.Subject.ImageUrl' class="img-fluid" alt="Card Image">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@exam.ExamName</h5>
                    <p class="card-text">@exam.Subject.Description</p>
                    <p class="card-text"><small class="text-muted">Last updated: @exam.DateCreated.ToString("MMMM dd yyyy")</small></p>
                    <button data-toggle="modal" data-target="#fullScreenModal" type="button" name="open" data="@exam.ExamId" class="btn btn-primary">
                        Read More
                    </button>

                </div>
            </div>
        </div>
    </div>
}